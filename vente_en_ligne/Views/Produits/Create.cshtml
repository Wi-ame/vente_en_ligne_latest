@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DarkPan - Bootstrap 5 Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.minP.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/styleP.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/stylePr.css" />
    <style>
        .image-container {
            display: inline-block;
            position: relative;
        }

        .image-preview {
            max-width: 100%;
            max-height: 200px; /* Set a maximum height for the image preview */
            border: 1px solid #ddd; /* Add a border for better visibility */
            border-radius: 4px; /* Optional: Add border-radius for a rounded appearance */
            margin-top: 10px;
            height:250px;
            width : 300px;
        }

        .choose-button {
            cursor: pointer;
            color: blue;
            text-decoration: underline;
        }
    </style>

</head>

<body>
    <div class="container-fluid position-relative d-flex p-0" style="background-color: #001f3f">
        <!-- Spinner Start -->
        <div id="spinner" class="show  position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center" style="background-color: #001f3f">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3" style="background-color: #001f3f; color: white;">
            <nav class="navbar" style="background-color: #001f3f ">
                <img src="~/img/e-commerce.png" class="image" />

                <a href="index.html" class="navbar-brand mx-4 mb-3 d-flex align-items-center" style="background-color: #001f3f;">
                </a>

                <div class="navbar-nav w-100" style="background-color: #001f3f; color: white;">
                    <a href="index.html" class="nav-item nav-link active" style="background-color: #001f3f">
                        <i class="far fa-smile fa-lg me-2" style="background-color: #001f3f"></i> Welcome Owner
                    </a>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="background-color: #001f3f">
                            <i class="fas fa-shopping-bag fa-lg me-2" style="background-color: #001f3f;"></i> Products
                        </a>
                        <div class="dropdown-menu border-0" style="background-color: #001f3f; padding: 10px;">
                            <a href="@Url.Action("Create", "Produits")" class="dropdown-item ">Add Product</a>
                            <a href="#" class="dropdown-item ">Delete Product</a>
                            <a href="#" class="dropdown-item ">Update Product</a>
                        </div>
                    </div>

                    <a href="#" class="nav-item nav-link" style="background-color: #001f3f"><i class="fa fa-th me-2" style="background-color: #001f3f"></i>Recent sales</a>
                    <a href="#" class="nav-item nav-link" style="background-color: #001f3f"><i class="fa fa-keyboard me-2" style="background-color: #001f3f"></i>Visit Products</a>
                    <a href="" class="nav-item nav-link" style="background-color: #001f3f"><i class="fa fa-chart-bar me-2" style="background-color: #001f3f"></i>Statistics</a>

                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content" style="background-color: #AED6F1; color: white;">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand  sticky-top px-4 py-0" style="background-color: #001f3f; color: white;">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4" style="background-color: #001f3f;">
                    <h2 class="text-primary mb-0"><i class="fa fa-user-edit" style="background-color: #001f3f;"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0" style="background-color: #001f3f;">
                    <i class="fa fa-bars" style="background-color: #001f3f;"></i>
                </a>

                <div class="navbar-nav align-items-center ms-auto" style="background-color: #001f3f;">
                    <div class="nav-item dropdown" style="background-color: #001f3f;">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="background-color: #001f3f;">
                            <img class="rounded-circle me-lg-2" src="/img/profil.png" alt="" style="width: 40px; height: 40px;">
                            <span class="d-none d-lg-inline-flex">Owner</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end  border-0 rounded-0 rounded-bottom m-0" style="background-color: #001f3f;">
                            <a href="#" class="dropdown-item">My Profile</a>
                            <a href="#" class="dropdown-item">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            
            <form style="background-color: #001f3f;">
                <div class="corps-formulaire">
                    <div class="gauche">
                        <div class="groupe">
                            <label>Product's Name</label>
                            <input type="text" name="Name" autocomplete="off" />
                            <i class="fas fa-shopping-bag fa-lg me-2" style="color: red;"></i>
                        </div>

                        <div class="groupe">
                            <label>Give the price</label>
                            <input type="text" name="Prix" autocomplete="off" />
                            <i class="fas fa-dollar-sign fa-lg me-2" style="color: red;"></i>
                        </div>

                        <div class="groupe">
                            <label>The date of launch</label>
                            <input type="text" name="DATE_DEPOT" autocomplete="off" />
                            <i class="fas fa-calendar-alt fa-lg me-2" style="color: red;"></i>
                        </div>

                        <div class="groupe">
                            <label>The quantity offered</label>
                            <input type="text" name="Stock" autocomplete="off" />
                            <i class="fas fa-cubes fa-lg me-2" style="color: red;"></i>
                        </div>
                        <div class="groupe">
                            <label><i class="fas fa-info-circle" style="color:red;"></i>Add some Details</label>
                            <input type="text"  style="width: 100%;" />
                        </div>

                        
                    </div>

                    <div class="droite">
                        <div class="groupe">
                            <label for="imageFile">Choose your image:</label>
                            <span class="choose-button" onclick="chooseFile()" style="color:red;">Choose File</span>
                            <input type="file" name="imageFile" id="imageFile" accept=".jpg, .jpeg, .png" style="display: none;"
                                   onchange="handleImageSelect(this)" />
                            <img id="imagePreview" class="image-preview" src="#" alt="Image Preview" style="display: none;" />
                        </div>

                    </div>
                </div>

                <div class="pied-formulaire" align="center" style="margin-top: 20px;">
                    <button style="background-color: red; color: white;">Add the Product</button>
                </div>

            </form>


            <!-- the JavaScript Code -->
            <script>
                function chooseFile() {
                    document.getElementById('imageFile').click();
                }

                function handleImageSelect(input) {
                    const file = input.files[0];

                    if (file) {
                        const imgElement = document.getElementById('imagePreview');

                        // Display the selected image preview
                        imgElement.src = URL.createObjectURL(file);
                        imgElement.style.display = 'block';
                    }
                }
            </script>
            <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
        </div>

        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/lib/chart/chart.min.js"></script>
        <script src="/lib/easing/easing.min.js"></script>
        <script src="/lib/waypoints/waypoints.min.js"></script>
        <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
        <script src="/lib/tempusdominus/js/moment.min.js"></script>
        <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
        <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

        <!-- Template Javascript -->
        <script src="/js/mainP.js"></script>
</body>

</html>